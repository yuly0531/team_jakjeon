	var arr = [];
	<c:forEach var="map" items="${requestScope.kospiMap.kospiList}" varStatus="vs">


		
			arr.push("${map.reg_date}")
		
			
	
	</c:forEach>
		
	var arr2 = [];
	<c:forEach var="map" items="${requestScope.kospiMap.kospiList}" varStatus="vs">
		
			arr2.push("${map.previous_close}")
		
	</c:forEach>
//////////////////////////////


