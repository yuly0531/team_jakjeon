	<c:forEach var="map" items="${requestScope.kosdaqMap.kosdaqList}" varStatus="vs">
		
			arr4.push("${map.previous_close}")
		
	</c:forEach>
			
		
		
	
	new Chart(document.getElementById("line-chart"), {
	    type: 'line',
	    data: {
	      labels: arr,
	      datasets: [{ 
	          data: arr2,
	          label: "코스피",
	          borderColor: "#3e95cd",
	          fill: false
	        }
	      ]
	    },
	    options: {
	      title: {
	        display: true,
	        text: '일봉차트'
	      }
	    }
	  });
